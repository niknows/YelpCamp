<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <ul class="list-group mt">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="card mb-4">
              <img class="card-img-top" alt="Campground's image" src="<%= campground.image %>">  
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                <h3 class="card-title"><a href="#"><%= campground.name %></a></h3>
                <h4>$9,0/night</h4>
                </div>
                <p class="card-text"><%= campground.description %></p>
              </div>
            </div>
            <div class="card">
                <div class="card-header">
                  <div class="text-right">
                  <a class="btn btn-success"href="/campgrounds/<%= campground._id %>/comments/new">Create new comment</a>
                  </div>
                  <div class="mt-4">
                  <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                           <strong><%= comment.author %></strong>
                           <span class="float-right">10 days ago</span>
                           <p><%= comment.text %></p>
                        </div>
                    </div>
                  <% }); %>
                 </div>
                </div>
            </div>
            
        <a class="btn mt-2" href="/campgrounds">Back</a>
        </div>
    </div>
    
</div>

<% include ../partials/footer %>