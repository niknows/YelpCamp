<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <ul class="list-group mt">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="card">
              <img class="card-img-top" alt="Campground's image" src="<%= campground.image %>">  
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                <h1 class="card-title"><%= campground.name %></h1> 
                <h4>$9,0/night</h4>
                </div>
                <p class="card-text"><%= campground.description %></p>
                <p><a class="btn btn-success"href="/campgrounds/<%= campground._id %>/comments/new">Create new comment</a></p>
              </div>
            </div>
            <h4>Comments:</h4>
            <% campground.comments.forEach(function(comment){ %>
                <p>
                  <strong><%= comment.author %></strong> - <%= comment.text %>
                </p>
            <% }); %>
        <a class="btn mt-2" href="/campgrounds">Back</a>
        </div>
    </div>
    
</div>

<% include ../partials/footer %>