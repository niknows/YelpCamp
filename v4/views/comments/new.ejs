<% include ../partials/header %>
<div class="container">
<div class="row text-center">
<div class="col-md-12">
<h1 class="display-4 mt-5">Create a new comment to <%= campground.name %></h1>
<form  class="mt-4" action="/campgrounds/<%= campground._id %>/comments" method="POST" style="width: 30%; margin: 0 auto">
    <div class="form-group">
    <input type="text" name="name" class="form-control text-center" placeholder="Place Name">
    </div>
    <div class="form-group">
    <input type="text" name="image" class="form-control text-center" placeholder="Image URL">
    </div>
     <div class="form-group">
        <textarea name="info" class="form-control text-center" placeholder="Describe this place"></textarea>
    </div>
    <button class="btn btn-danger btn-lg btn-block">Submit!</button>
</form>
<a  class=" btn mt-2" href="/campgrounds">Back</a>
</div>
</div>
</div>
<% include ../partials/footer %>