<% include partials/header %>

<div class="container">
<header class="jumbotron">
    <div class="container">
        <h1 class="display-4">Hello There! It's nice to have you here!</h1>
        <p class="lead">Check out amazing hand-pick places from all over the world!</p>
        <a class="btn btn-lg btn-primary" href="/campgrounds/new">Create a new campground</a>
    </div>
</header>
<div class="card-deck">
    <% campgrounds.forEach(function(campground){ %>
        
           <div class="card" style="width: 18rem;">
           <img class="card-img-top" src="<%= campground.image %>">
           <div class="card-body">
           <h2 class="card-title"> <%= campground.name %> </h2>
           </div>
        </div>
        
    <% }); %>
</div>
</div>

<% include partials/footer %>

